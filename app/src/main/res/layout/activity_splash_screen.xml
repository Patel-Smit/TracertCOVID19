<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_height="400dp"
        android:src="@drawable/logo"
        android:alpha="0.75"
        android:transitionName="tr_logo_image" />

    <TextView
        android:id="@+id/tv_appName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tracert_covid_19"
        android:textSize="45sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black"
        android:transitionName="tr_logo_text"></TextView>

    <TextView
        android:id="@+id/tv_slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/now_you_can_take_precautions"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="serif-monospace"></TextView>

</LinearLayout>